# Allow any user on the local system to connect to any database with
# any database user name using Unix-domain sockets (the default for local
# connections).
#
# TYPE  DATABASE        USER            ADDRESS                 METHOD

# Default:
{% for connection in postgresql.configuration.pg_hba.default %}
# {{ connection.comment }}
{{ connection.type }}  {{ connection.database }}  {{ connection.user }}  {{ connection.address }}  {{ connection.method }}
{% endfor %}

# Passwored hosts
{% for host in postgresql.configuration.pg_hba.passwd_hosts %}
# {{ connection.comment }}
host  all  all  {{ host }}  password
{% endfor %}

# Trusted hosts
{% for host in postgresql.configuration.pg_hba.trust_hosts %}
# {{ connection.comment }}
host  all  all  {{ host }}  trust
{% endfor %}

# User custom
{% for connection in postgresql.configuration.pg_hba.custom %}
# {{ connection.comment }}
{{ connection.type }}  {{ connection.database }}  {{ connection.user }}  {{ connection.address }}  {{ connection.method }}
{% endfor %}
